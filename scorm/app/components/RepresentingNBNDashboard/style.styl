@import 'nib/clearfix';
@import '~styles/mixins';
@import '~styles/vars';

.RepresentingNBNDashboard {
  backgroundCover(url('./background.jpg'));
  height: auto;
  min-height: 100vh;
}

.RepresentingNBNDashboard__title {
  text-align: center;
}

.RepresentingNBNDashboard__preamble {
  text-align: center;
  font-size: 0.9em;
  margin: 0 auto 2rem;
  max-width: 40rem;
}

.RepresentingNBNDashboard__intro {
  margin-bottom: 1em;
}

.RepresentingNBNDashboard__instruction {
  font-weight: bold;
}

.Dashboard {
  clearfix();
}

itemHeight = 30vh;

.DashboardItem {
  display: block;
  width: 24%;
  height: itemHeight;
  min-height: 8rem;
  border-radius: 2rem;
  background-color: rgba(colGreyPale, 0.8);
  float: left;
  box-shadow: 0 0 6px rgba(black, 0.2);
  position: relative;

  &:not(:last-child) {
    margin-right: 1%;
  }

  &.DashboardItem_available {
    &:active {
      box-shadow: 0 0 12px rgba(colBlue);
    }
  }
}

.DashboardItem__image,
.DashboardItem__content {
  position: absolute;
  top: 0.6rem;
  right: 0.6rem;
  bottom: 0.6rem;
  left: 0.6rem;
  pointer-events: none;
}

.DashboardItem__content {
  z-index: 2;
}

.DashboardItem__figure {
  flexCenter();
  fontDisplay(700);
  size(8vmin);
  color: white;
  transition: background-color 0.4s ease-out;
  font-size: 3vmin
  margin: 6vmin auto 0;
  background-color: rgba(colBlue, 0);
  border-radius: 50%;
  border: 2px solid white;

  .DashboardItem_complete &,
  .DashboardItem_available:active &,
  .DashboardItem_available:hover & {
    background-color: rgba(colBlue, 1);
  }

  .DashboardItem_available:active & {
    transition: none;
    transform: scale(1.06);
  }
}

.DashboardItem__caption {
  fontDisplay(400);
  font-size: 2.5vmin;
  line-height: 1.1;
  padding: 0 1vmin;
  color: white;
  text-align: center;
  position: absolute;
  bottom: 0.4em;
  min-height: 34%;
}

.DashboardItem__image {
  backgroundContain()
  background-size: cover;
  transition: opacity 0.4s ease-out;
  border-radius: 1.6rem;
  z-index: 1;
  opacity: 0.6;

  .DashboardItem_available & {
    opacity: 0.9;
  }

  .DashboardItem_complete &,
  .DashboardItem_available:hover & {
    opacity: 1;
  }

  [data-key="positive-brand"] & {
    background-image: url('./positiveBrand.jpg');
  }

  [data-key="vehicle-branding"] & {
    background-image: url('./vehicleBranding.jpg');
  }

  [data-key="customer-interactions"] & {
    background-image: url('./customerInteractions.jpg');
  }

  [data-key="code-of-conduct"] & {
    background-image: url('./codeOfConduct.jpg');
  }
}

.DashboardItem_complete,
.DashboardItem_available {
  cursor: pointer;
}

.DashboardItem_complete:before {
  size(3.2rem);
  backgroundContain(url(@import '~images/tickDisc128.png'));
  positionAbs(auto, -4px, -4px, auto);
  content: ' ';
  z-index: 3;
}

.RepresentingNBNDashboard__moduleSummaryButton {
  continueButton(16em);
  background-position: 90% center;
  text-decoration: none;
  margin: 2rem auto;
}

@media (max-width: 890px) {
  .RepresentingNBNDashboard {
    height: auto;
  }

  .RepresentingNBNDashboard__dashboard {
    padding-bottom: 6vh;
  }

  .DashboardItem {
    width: 48%
    margin: 0 0 2%;

    &:not(:last-child) {
      margin: 0 0 2%;
    }

    &:nth-child(2n + 1) {
      margin-right: 1%;
    }
  }
}

@media (max-width: 560px) {
  .DashboardItem {
    width: 90%
    height: 10rem;
    float: none;
    margin: 0 auto 2vh !important;
  }

  .DashboardItem__figure {
    size(3rem);
    positionAbs(50%, auto, auto, 1rem);
    font-size: 1rem;
    margin-top: -1.5rem;
  }

  .DashboardItem__caption {
    flexCenter();
    justify-content: flex-start;
    size(auto);
    positionAbs(0, 0, 0, 4rem);
    text-align: left;
    font-size: 1.1rem;
    padding: 1rem;
  }
}

