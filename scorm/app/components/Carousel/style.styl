@import '~styles/mixins';
@import '~styles/vars';

.Carousel {
  width: 100%;

  .flickity-page-dots .dot {
    width: 1rem;
    height: 1rem;
    opacity: 1;
    background: transparent;
    border: 2px solid white;
  }

  .flickity-page-dots .dot.is-selected {
    background: white;
  }
}

.Carousel__panel {
  width: 80%;
  max-width: 1200px;
  height: 60vh;
  background-color: #fff;
  border-radius: 0.6rem;
  position: relative;
  margin-right: 11%;
  overflow: hidden;
  box-shadow: 0 0 6px rgba(black, 0.4);
  padding: 1rem;
}

.Carousel__panel__figure {
  backgroundContain();
  width: 60%;
  height: 100%;
  float: right;
  background-color: white;
}

.Carousel__panel__caption {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 1rem;
  right: 60%;
  padding-right: 1rem;
}

.Carousel__panel__caption__content {
  display: block;
  fontDisplay(300);
}

@media (max-width: 720px) {
  .Carousel__panel {
    height: 64vh;
  }

  .Carousel__panel__figure,
  .Carousel__panel__caption {
    float: none;
    clear: both;
    width: 100%;
    position: relative;
    top: auto;
    right: auto;
    left: auto;
    bottom: auto;
    padding: 0.6rem;
  }

  .Carousel__panel__figure {
    height: 56%;
  }

  .Carousel__panel__caption {
    height: 44%;
    padding: 0;
  }
}

@media (max-width: breakpointMobile) {
  .Carousel__panel {
    margin-right: 6%;
  }

  .Carousel .flickity-prev-next-button {
    display: none;
  }
}
