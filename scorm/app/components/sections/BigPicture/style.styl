@import '~styles/mixins.styl';

.BigPicture__cover {
  coverScreen();
  backgroundContain();
  background-position: 80% 14%;
  position: relative;
  overflow: hidden;
  background-size: cover;
  background-color: black;
}

.BigPicture__cover__nbnLogo {
  dim = 28vmin;
  background: url(@import '~images/nbnLogo.png') no-repeat;
  background-size: auto 72%;
  background-position: center;
  background-color: rgba(colGreyPale, 0.8);
  width: dim;
  height: dim;
  border-bottom-left-radius: dim;
  border-bottom-right-radius: dim;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -0.5 * dim;

  @media (max-width: breakpointMobile) {
    background-image: url(@import '~images/nbnLogoGraphicCompact.png');
    background-size: 70% auto;
    background-position: center 20%;
  }
}

.BigPicture__cover__scrollDownButton {
  scrollDownButtonFullBlueDisc();

  @media (max-width: breakpointMobile) {
    bottom: 18%;
  }
}

.BigPicture__cover__content {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.BigPicture__cover__title {
  fontDisplay();
  shadowText();
  line-height: 1.1;
  width: 100%;
  padding: 0 1rem;
  font-size: 6.4vmin;
  text-align: center;
  color: white;
  margin-bottom: 0.8rem;
}

.BigPicture__cover__subTitle {
  fontDisplay();
  shadowText();
  font-weight: 400;
  width: 100%;
  padding: 0 1rem;
  font-size: 4vmin;
  text-align: center;
  color: white;
}
