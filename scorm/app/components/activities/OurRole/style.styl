@import '~styles/vars';
@import '~styles/mixins';

.OurRole {
  background-color: colBlue;
}

.OurRole__content {
  flexCenter(column);
  size(80%, 100%);
  max-width: 44em;
  color: white;
  text-align: center;
  margin: 0 auto;

  @media (max-width: breakpointTablet) {
    height: auto;
  }
}

.OurRole__title {
  color: white;
}

.OurRole__subTitle {
  color: white;
}

.OurRole__message {
  @media (max-width: breakpointMobile) {
    padding-bottom: 4rem;
  }
}

.OurRole__serviceScope {
  position: relative;
  padding-bottom: 0.7rem;
  width: 80%;
  margin: 0 auto 1rem auto;

  li {
    list-style-position: inside;
    list-style-type: disc;
  }

  &:after {
    content: ' ';
    width: 3rem;
    height: 2px;
    background-color: white;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -1.5rem;
  }
}
