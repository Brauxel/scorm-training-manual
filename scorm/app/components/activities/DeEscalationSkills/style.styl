@import '~styles/vars';
@import '~styles/mixins';

.DeEscalationSkills {
  backgroundCover(url('./background.jpg'));

  .Activity__contentContainer {
    position: relative;
  }
}

.DeEscalationSkills__content,
.DeEscalationSkills__imageContainer {
  height: 100%;
}

.DeEscalationSkills__content {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;
  position: relative;
  padding-right: 1em;
  width: 70%;
  float: left;
  font-size: 0.94rem;
}

.DeEscalationSkills__introContent {
  margin-bottom: 0.8rem;
}

.DeEscalationSkills__option {
  positionRel();
  transition: all 0.2s ease-out;
  padding-left: 2rem;
  margin: 0 0.6rem 1rem 0;
  cursor: pointer;

  &:before {
    positionAbs(50%, auto, auto, 0.5rem);
    size(0.76rem);
    border-radius: 1em;
    content: ' ';
    border: 1px solid colBody;
    margin: -0.38rem auto auto -0.38rem;
  }

  &_selected {
    transform: scale(1.04) translateX(1.4%);

    &:before {
      border: 1px solid white;
      background-color: colBlue;
    }
  }
}

.DeEscalationSkills__checkAnswerButton {
  pillButton();
  margin: 0 auto;
}

.DeEscalationSkills__imageContainer {
  backgroundContain(url('./figure.png'));
  width: 30%;
  float: right;
}

.DeEscalationSkills__feedbackContainer {
  positionAbs(0px, 0px, 0px, auto);
  flexCenter(column);
  transition:
    transform 0.2s ease-out,
    opacity 0.2s ease-out;
  transform: translateX(-20%);
  width: 32%
  z-index: 10;
  height: 0;
  overflow: hidden;
  opacity: 0;

  &_visible {
    transform: translateX(0);
    opacity: 1;
    height: auto;
    overflow: visible;
  }
}

.DeEscalationSkills__feedback {
  width: 100%;
  font-size: 0.9rem;
  padding: 1rem;
  border-radius: 1.4rem;
  background-color: rgba(white, 0.9);
  box-shadow: 0 0 4px rgba(black, 0.2);
}

.DeEscalationSkills__feedback__title {
  font-weight: 700;
  margin-bottom: 0.6em;
}

@media (max-width: breakpointMobile) {
  .DeEscalationSkills__content,
  .DeEscalationSkills__imageContainer {
    float: none;
    clear: both;
    width: 100%;
  }

  .DeEscalationSkills__content {
    height: auto;
    margin-bottom: 4vh;

    .ContentPanel__title {
      text-align: center;
    }
  }

  .DeEscalationSkills__imageContainer {
    height: 40vh;
  }

  .DeEscalationSkills__feedbackContainer {
    bottom: auto;
    top: 17rem;
    height: 0px;
    width: 0px;

    &_visible {
      width: 100%;
      height: auto;
    }
  }
}
