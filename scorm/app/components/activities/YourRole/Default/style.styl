@import 'nib/clearfix';
@import '~styles/vars';
@import '~styles/mixins';

networkDim = 46vw;
nodeDim = 24.66%;

.YourRole {
  background-color: #333;
  position: relative;
}

.YourRole .NbnPulseLogo {
  // position: absolute;
  // left: 530px;
  // bottom: 160px;
  // z-index: 20;

  // @media (max-width: breakpointMobile) {
  //   left: auto;
  //   bottom: auto;
  //   right: 100px;
  //   top: 80vh;
  // }

  z-index: 20;
  positionAbs(55vh, auto, auto, 50%);
}

.YourRole__background {
  positionAbs(0px, 0px, 0px, 0px);
  opacity: 0.2;
  background-image: url('../background.png');
  background-size: cover;
  background-position: left bottom;
  z-index: 1;
}

.YourRole__title {
  color: white;
  shadowText();
}

.YourRole .ContentPanel__contentContainer {
  position: relative;
  z-index: 2;
}

.YourRole__mainContentContainer {
  transition: opacity 0.2s ease-out;
  color: white;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 1;
}

.YourRole__mainContent_hidden {
  opacity: 0;
  display: none;
}

.YourRole__messagesDragables {
  flexCenter(column);
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  right: networkDim * 1.1;
  max-width: 50rem;
  bottom: 0;
}

.YourRole__dragMessage,
.YourRole__intro {
  transition: opacity 0.6s ease-out, transform 0.4s ease-out;
  width: auto;
  height: auto;
  opacity: 1;
  font-size: 1rem;
  line-height: 1.4;
  transform: translateX(0);

  &.hidden {
    overflow: hidden;
    padding: 0;
    margin: 0;
    width: 0;
    height: 0;
    opacity: 0;
    transform: translateX(10vw);
  }
}

.YourRole__intro {
  font-size: 1.1em;
}

.YourRole__instructions {
  text-shadow: none;
  font-size: 0.92em;
  border-radius: 0.2em;
  padding: 0.6em;
  background-color: colBody;
  box-shadow: 0 0 6px rgba(black, 0.4);

  strong {
    color: colBlue;
  }
}

.YourRole__videoLink {
  shadowText();
  videoLink();
}

.YourRole__intro {
  shadowText();
}

.YourRole__dragMessage {
  background-color: rgba(colBlue, 0.8);
  border-radius: 0.4rem;
  padding: 1em;
  box-shadow: 0 0 6px rgba(black, 0.4);
}

.YourRole__dragable,
.YourRole__dropTarget {
  position: relative;
}

.YourRole__dragable {
  backgroundContain();
  width: 13vmin;
  height: 13vmin;
  border-radius: 50%;
  box-shadow: 0 0 6px rgba(black, 0.4);
}

.YourRole__dragablesContainer {
  flexCenter(row);
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  min-height: 13vmin;
  padding-top: 1rem;
}

.YourRole__dropTargetsContainer {
  width: networkDim;
  height: networkDim;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -0.5 * networkDim;

  .network {
    width: 100%;
    height: 100%;
  }
}

.YourRole__dropTarget,
.YourRole__dummyNode {
  size(nodeDim);
  transform: scale(1.01);
  border-radius: 50%;
  position: absolute;
}

@keyframes dropTargetPulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  100% {
    transform: scale(1.6);
    opacity: 0;
  }
}

.YourRole__dropTarget {
  &:before {
    positionAbs(0px, 0px, 0px, 0px);
    background-color: colBlue;
    content: ' ';
    border-radius: 50%;
    opacity: 0;
  }
}

.YourRole__dropTarget.highlightNode {
  background-color: colBlue;
  &:before {
    animation: dropTargetPulse 1s ease-out;
  }
}

.YourRole__dummyNode {
  background-size: 89% 89%;
  background-position: center;
  background-repeat: no-repeat;
  background-color: colBlue;
}

.YourRole__dropTarget[data-key="drop1"] {
  top: 7.33%;
  left: 22.88%;
}

.YourRole__dropTarget[data-key="drop2"] {
  top: 36%;
  left: 71.55%;
}

.YourRole__dropTarget[data-key="drop3"] {
  top: 66.88%;
  left: 22.88%;
}

.YourRole__dummyNode_1 {
  top: 36%;
  left: 4%;
  background-image: url('../health.png');
}

.YourRole__dummyNode_3 {
  top: 7.33%;
  left: 54.22%;
  background-image: url('../student.png');
}

.YourRole__dummyNode_5 {
  top: 66.88%;
  left: 54.22%;
  background-image: url('../grandparents.png');
}

.YourRole__dropTarget .dropTarget__dragableContainer {
  position: absolute;
  width: 89%;
  height: 89%;
  top: 5.05%;
  left: 5.05%;

  .YourRole__dragable {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: none;
    cursor: pointer;
  }
}


