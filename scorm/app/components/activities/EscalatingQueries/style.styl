@import '~styles/vars';
@import '~styles/mixins';

.EscalatingQueries {
  background-color: colBlue;
}

.EscalatingQueries__content {
  size(80%, 100%);
  positionRel();
  max-width: 44em;
  color: white;
  text-align: center;
  padding-top: 2rem;
  margin: 0 auto;

  @media (max-width: breakpointMobile) {
    padding-top: 0;
    height: auto;
  }
}

.EscalatingQueries__title {
  color: white;
}

.EscalatingQueries__steps {
  positionAbs(5.4rem, 0px, 1.4rem, 0px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;

  @media (max-width: breakpointMobile) {
    positionRel();
  }
}

.EscalatingQueries__arrow {
  backgroundCenter(url(@import '~images/arrowDownOrange.png'));
  background-size: auto 60%;
  height: 8vh;
  max-height: 10rem;
  width: 100%;
}

.EscalatingQueries__step {
  font-weight: 400;
  width: 100%;
  max-width: 40rem;
  font-size: 1rem;

  &:before {
    size(1.8rem);
    font-weight: 700;
    line-height: 1.8;
    text-align: center;
    display: inline-block;
    box-shadow: 1px 1px 1px rgba(black, 0.2);
    content: attr(data-step);
    border-radius: 50%;
    border: 2px solid lighten(colBlue, 40%);
    background-color: colBlue;
  }
}
