@import '~styles/vars';
@import '~styles/mixins';

.BookmarkPanel {
  display: block;
  background-color: white;
  border-radius: 1rem;
  box-shadow: 0 0 4px rgba(black, 0.8);
  overflow: hidden;
}

.BookmarkPanel__message {
  padding: 1rem;
  text-align: center;
  max-width: 20rem;
}

.BookmarkPanel__buttonsContainer {
  flexCenter();
  padding: 0.4rem;
  background-color: colBlue;
}

.BookmarkPanel__button {
  hollowPillButton();
  margin: 0 1rem;
}

.BookmarkPanel_inactive {
  pointer-events: none;
}
