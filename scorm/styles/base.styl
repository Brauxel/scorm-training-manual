@import '~styles/globalReset.styl';
@import '~styles/fontEmbed';
@import '~styles/vars';
@import '~styles/mixins';

* {
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

html, body {
  fontDisplay(300);
  font-size: 16px;
  color: colBody;
  line-height: 1.375;
  width: 100%;
  min-height: 100%;

  @media (max-width: 520px) {
    html, body {
      font-size: 15px;
      line-height: 1.25
    }
  }
}

a {
  text-decoration: none;
  color: inherit;
}

strong {
  font-weight: bold;
}
